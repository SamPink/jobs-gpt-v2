{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "webAppName": {
            "type": "string",
            "defaultValue": "jobs-gpt",
            "metadata": {
                "description": "jobs gpt"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "UK South",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "linuxFxVersion": {
            "type": "string",
            "defaultValue": "PYTHON|3.7",
            "metadata": {
                "description": "The Runtime stack of current web app"
            }
        },
        "repoUrl": {
            "type": "string",
            "defaultValue": "https://github.com/SamPink/jobs-gpt-v2.git",
            "metadata": {
                "description": "The URL for the repository containing the Streamlit app"
            }
        },
        "branch": {
            "type": "string",
            "defaultValue": "main",
            "metadata": {
                "description": "The branch of the repo to deploy"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2020-06-01",
            "name": "[parameters('webAppName')]",
            "location": "[parameters('location')]",
            "kind": "app",
            "properties": {
                "serverFarmId": "[concat('/subscriptions/YOUR_SUBSCRIPTION_ID/resourceGroups/YOUR_RESOURCE_GROUP/providers/Microsoft.Web/serverfarms/', parameters('webAppName'))]",
                "siteConfig": {
                    "linuxFxVersion": "[parameters('linuxFxVersion')]",
                    "appCommandLine": "python -m streamlit run app/start.py --server.port 8000 --server.address 0.0.0.0"
                },
                "httpsOnly": true
            },
            "resources": [
                {
                    "apiVersion": "2020-06-01",
                    "name": "web",
                    "type": "sourcecontrols",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', parameters('webAppName'))]"
                    ],
                    "properties": {
                        "repoUrl": "[parameters('repoUrl')]",
                        "branch": "[parameters('branch')]",
                        "isManualIntegration": true
                    }
                }
            ]
        }
    ]
}